#!/bin/bash

export TERM=xterm
rofi -modi window,windowcd,run,drun,ssh,calc,top -show run -sidebar-mode -no-show-match -no-sort \
	-markup-rows -hide-scrollbar -no-fullscreen -no-custom -no-lazy-grab \
	-location 0 -bw 2 -eh 1 -lines 13 \
        -theme-str '#window {width: 800;}' \
        -theme-str '#window {x-offset: -3%; y-offset: -33%;}'
